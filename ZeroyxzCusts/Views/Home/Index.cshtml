@model IEnumerable<ZeroyxzCusts.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<!--Note the CustomersController as customers - best practice/more readable -->
<div class="container" ng-app='Customers' ng-controller='CustomersController as customers'>  
    <div class="row">

        <div class="col-md-6" ng-repeat="customer in customers track by customer.CustomerId">
            @*
                *******This works fine - repeating HTML in an ng-repeat *******
                <div><p id="name">Name:{{ customer.Name }}</p>
                <p id="address">Address:{{ customer.Address }},{{ customer.City }}, {{ customer.County }}, {{ customer.PostCode }}</p>
                <p id="email">Email:{{ customer.Email }}</p>
                <p id="twitter">Twitter:{{ customer.Twitter }}</p>
                <h4 ng-click="removeCustomer()">Remove</h4></div>
            *@

            @*
                *******This is better - putting the HTML in a template file*******
                Using ng-include and a child view in an html file
                <div ng-include="'/Client/Views/CustomerView.html'"></div>
            *@

            @*This is very good - using a directive - more flexibility (attributes, CSS, HTML etc)*@
            <directive></directive>

        </div>
    </div>
</div>

